<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <TextView
        android:id="@+id/messageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TTS example"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noto_sans_kr" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speech Rate"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noto_sans_kr"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/mainSpeechQuickBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="speechQuick"
            android:text="Quick"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>

        <Button
            android:id="@+id/mainSpeechNormalBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="speechNormal"
            android:text="Normal"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>

        <Button
            android:id="@+id/mainSpeechSlowBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="speechSlow"
            android:text="Slow"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noto_sans_kr"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/mainPitchHighBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="pitchHigh"
            android:text="High"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>

        <Button
            android:id="@+id/mainPitchNormalBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="pitchNormal"
            android:text="Normal"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>

        <Button
            android:id="@+id/mainPitchLowBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="pitchLow"
            android:text="Low"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:fontFamily="@font/noto_sans_kr"/>
    </LinearLayout>

    <EditText
        android:id="@+id/inputET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="여기만 처리하면 됩니다"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/noto_sans_kr"
        android:textSize="18sp"
        android:backgroundTint="#222222"
        android:padding="12dp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/speakBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:textColor="#FFFFFF"
        android:backgroundTint="#222222"
        android:fontFamily="@font/noto_sans_kr"
        android:textSize="18sp"
        android:layout_marginTop="12dp"/>
</LinearLayout>
