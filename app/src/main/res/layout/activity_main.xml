<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알람 기능 실행"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnMouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마우스캐치 실행"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnStt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STT 실행"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnTts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TTS 실행"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnTodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="할 일 관리 실행"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 헤드라인 읽기"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 운세 알아보기"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/noto_sans_kr"
            android:backgroundTint="#222222"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>
